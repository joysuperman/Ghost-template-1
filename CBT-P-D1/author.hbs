{{!< default}}
    <!--navbar end-->
    {{#author}}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="site-header-content">
                {{#if profile_image}}
                    <img class="author-profile-image img-raised rounded" src="{{profile_image}}" alt="{{name}}" />
                {{/if}}
                <h3 class="site-title">{{name}}</h3>
                <div class="author-meta">
                    {{#if location}}
                        <div class="author-location"><i class="fa fa-map-marker"></i>{{location}} <span class="bull">&bull;</span></div>
                    {{/if}}
                    <div class="author-stats">
                        {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}} <span class="bull">&bull;</span>
                    </div>
                    {{#if website}}
                        <a class="social-link social-link-wb" href="{{website}}" target="_blank" rel="noopener">W</a>
                    {{/if}}
                    {{#if twitter}}
                        <a class="social-link social-link-tw" href="{{twitter_url}}" target="_blank" rel="noopener">T</a>
                    {{/if}}
                    {{#if facebook}}
                        <a class="social-link social-link-fb" href="{{facebook_url}}" target="_blank" rel="noopener">F</a>
                    {{/if}}
                    <a class="social-link social-link-rss" href="https://feedly.com/i/subscription/feed/{{url absolute="true"}}rss/" target="_blank" rel="noopener">Y</a>
                </div>
                {{#if bio}}
                    <h2 class="author-bio">{{bio}}</h2>
                {{/if}}
            </div>
       
        </div>
    </div>
 {{/author}}

    <section>
        <div class="container">
            {{!-- Post Show Loop --}}
            {{#foreach posts}}
                
                <div class="row card_margin_bottom">
                    <div class="col-md-6">
                        {{#if feature_image}}
                        <div>
                            <a href="{{url}}"><img src="{{feature_image}}" alt="image" class="home_img_hover_opacity"></a>
                        </div>
                        {{/if}}
                    </div>
                    <div class="col-md-5">
                        <div>
                            <h3><a href="{{url}}" class="home_post_link">{{title}}</a></h3>
                            <p class="home_post_date">{{#primary_author}}By <a href="{{url}}">{{name}}</a> |{{/primary_author}} {{date format="D MMMM YYYY"}} | {{#if primary_tag}} {{#foreach tags}} <a href="{{url}}">{{name}}</a> , {{/foreach}}|{{/if}}  0 Comment</p>
                            <p class="home_post_para">{{excerpt words="33"}}</p>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <a href="{{url}}">
                            <div class="home_post_right_arrow_div">
                                <p class="home_post_right_arrow_p text-center">></p>
                            </div>
                        </a>
                    </div>
                </div>

            {{/foreach}}


            <a href="#" type="submit" class="btn home_page_load_more_btn">LOAD MORE</a>
        </div>
    </section>